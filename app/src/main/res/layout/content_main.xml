<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSec"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.appeerciciosemequipamento.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorAccent"
        android:text="@string/categories"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAbdomen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="Abdomen"
        android:text="@string/Abdomen"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/buttonPernas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="Pernas"
        android:text="@string/pernas"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="@+id/buttonAbdomen"
        app:layout_constraintStart_toStartOf="@+id/buttonAbdomen"
        app:layout_constraintTop_toBottomOf="@+id/buttonAbdomen" />

    <Button
        android:id="@+id/buttonCorpo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="Corpo"
        android:text="@string/corpo_inteiro"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/buttonPernas"
        app:layout_constraintStart_toStartOf="@+id/buttonPernas"
        app:layout_constraintTop_toBottomOf="@+id/buttonPernas" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonCorpo"
        app:layout_constraintStart_toStartOf="@+id/buttonCorpo"
        app:layout_constraintTop_toBottomOf="@+id/buttonCorpo"
        app:layout_constraintVertical_bias="0.51"
        app:srcCompat="@drawable/emagrecer"
        android:contentDescription="@string/imagePrinc" />

</android.support.constraint.ConstraintLayout>